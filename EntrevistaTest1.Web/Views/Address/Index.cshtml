@model IEnumerable<EntrevistaTest1.DataAccess.Models.Address>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<form action="/Address/Index" method="post">
    <div>
        <input id="txtFilter" name="txtFilter" type="text" value="@ViewBag.Filter" />
        <button id="btnFilter" name="btnFilter" type="submit">Filtrar</button>
    </div>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Direction)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Direction)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
